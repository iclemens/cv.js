{
    "extends": ["tslint:recommended"],
    "rules": {
        "no-consecutive-blank-lines": [
            true,
            2
          ],
        "no-empty": false,          
        "quotemark": [true, "single"],
        "max-classes-per-file": [true, 3],
        "one-line": [
            true,
            "check-whitespace",
            "check-else",
            "check-catch",
            "check-finally"
          ]
    }
}