{
    "compilerOptions": {
        "target": "es5",
        "module": "amd",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "removeComments": false,
        "noImplicitAny": false,
        "typeRoots": [
            "node_modules/@types/"
        ],
        "outDir": "./dist"
    },
    "exclude": ["node_modules", "demo"]
}
